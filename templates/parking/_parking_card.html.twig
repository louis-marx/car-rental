<div class="card border-secondary mb-3 text-center">
	<img src="{{ p.image }}" alt="Photo du parking" class="img-fluid">
	<div class="card-body">
		<h4 class="card-title">{{ p.ville }}</h4>
		<p class="card-text"></p>
		<a class="btn btn-outline-primary" href="{{ path('parking_show', {'slug': p.slug }) }}">Voir les v√©hicules disponibles</a>
		{% if app.user %}
			{% if app.user.roles[0] == "ROLE_ADMIN" %}
				<a class="btn btn-outline-success" href="{{ path('parking_modifier', {'id': p.id }) }}">Modifier</a>
			{% endif %}
		{% endif %}
	</div>
</div>
